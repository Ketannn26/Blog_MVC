@model BlogMVC.Models.ViewModels.EditTagRequest

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1> Edit Tags (Admin User)</h1>
    </div>
</div>
<div class="container py-5">
    <form method="post">
        <div class="mb-3">
            <label class="form-label"> Id </label>
            <input type="text" id="id" class="form-control" asp-for="id"
                   readonly />
        </div>
        <div class="mb-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" id="name" asp-for="Name" />
        </div>
        <div class="mb-3">
            <label class="form-label">Display Name</label>

            <input type="text" class="form-control" id="displayName" asp-for="DisplayName" />

        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-dark">Update</button>
        </div>
    </form>
</div>